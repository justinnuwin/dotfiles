[module/wlan]
    type = internal/network
    interface = wlp3s0
    interval = 3.0

    format-connected = <ramp-signal><label-connected>
    label-connected = %essid%

    ramp-signal-foreground  = ${colors.background}
    ramp-signal-background  = ${colors.blue}
    ramp-signal-padding     = 2

    label-connected-foreground  = ${colors.background}
    label-connected-background  = ${colors.background-alt}
    label-connected-padding     = 1

    ramp-signal-0 = üõ•
    ramp-signal-1 = üõ®
    ramp-signal-2 = üõß
    ramp-signal-3 = üõ¶
    ramp-signal-4 = üô≠

[module/eth]
    type = internal/network
    interface = enp4s0
    interval = 3.0

    format-connected-underline = #55aa55
    format-connected-prefix = "ÓÜú "
    format-connected-prefix-foreground = ${colors.foreground-alt}
    label-connected = %local_ip%

    format-disconnected =
    ;format-disconnected = <label-disconnected>
    ;format-disconnected-underline = ${self.format-connected-underline}
    ;label-disconnected = %ifname% disconnected
    ;label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
    type = internal/date
    interval = 5

    date = %m-%d
    date-alt = " %Y-%m-%d"

    time = %H:%M
    time-alt = %H:%M:%S

    format-prefix = ÔÅ≥
    format-prefix-foreground    = ${colors.background}
    format-prefix-background    = ${colors.blue}
    format-prefix-padding       = 2

    label = %date% %time%
    label-foreground    = ${colors.background}
    label-background    = ${colors.background-alt}
    label-padding       = 1

[module/pulseaudio]
    type = internal/pulseaudio
    sink = alsa_output.pci-0000_00_1b.0.analog-stereo
    format-volume = <label-volume>

	format-volume-prefix            = üîâ 
	format-volume-prefix-foreground = ${colors.background}
	format-volume-prefix-background = ${colors.green}
	format-volume-prefix-padding    = 2

	label-volume            = %percentage%%
	label-volume-foreground = ${colors.background}
	label-volume-background = ${colors.background-alt}
	label-volume-padding    = 1

	format-muted = <label-muted>

	format-muted-prefix            = üîá 
	format-muted-prefix-foreground = ${colors.background}
	format-muted-prefix-background = ${colors.green}
	format-muted-prefix-padding    = 2

	label-muted            = 00%
	label-muted-foreground = ${colors.background}
	label-muted-background = ${colors.background-alt}
	label-muted-padding    = 1

	format-volume-padding = 0
	format-muted-padding  = 0

[module/battery]
